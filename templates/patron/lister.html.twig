{% extends 'base.html.twig' %}

{% block title %}Patron{% endblock %}
{% block patron %} active {% endblock %}

{% block contenu %}
 <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top" style="background-image: url({{ asset( 'images/banniere_patron.jpeg' ) }});">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Les patrons</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->


    <!-- ***** Products Area Starts ***** -->

	<section class="section" id="products">
    <div class="liste">
        <div class="container">
            <div class="row">
            {% for p in pPatron %}
                <a class="lien" href="{{ path('patronConsulter', { 'id': p.id }) }}">
                <div class="card">
                    <div class="photoCard">
                        <img src="{{ asset( p.image ) }}" alt="image">
                    </div>
                    <div class="descrCard">
                        {{ p.nom }} </br>
                    </a>
                        <a href="{{ path('patronLike', { 'id': p.id }) }}" class="btn btn-link lien js-like">
                            <span class="js-likes">{{ p.likes.count }}</span>
                            {% if app.user and p.isLikedByUser(app.user) %}
                                <i class="fa-solid fa-heart"></i>
                            {% else %}
                                <i class="fa-regular fa-heart"></i>
                            {% endif %}
                            <span class="js-label">Like</span>
                        </a>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
        </div>
    </section>
{% endblock %}