{% extends "baseAdmin.html.twig" %}
{% block title %}Ajouter un patron{% endblock %}
{% block addL %}colorlib-active{% endblock %}
{% block style %}
{% endblock %}
{% block contenu %}
 <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top" style="background-image: url({{ asset( 'images/banniere_patron.jpeg' ) }});">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Ajouter un livre</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->
    <div class="cardA">
        <div class="cardA-body">
            <p class="cardA-description">
                Rentrez les informations du nouveau livre
            </p>
            {{ form_start(form, 
                {class : 'form-sample'}) 
            }}
            <div class="form-group">
                <label for="nom">Nom</label>
                  {{ form_row(form.nom, 
                    {class : 'form-control'},
                    {id : 'nom'}) }}
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                  {{ form_row(form.image, 
                    {class : 'form-control'},
                    {id : 'image'}) }}
            </div>
            <button type="submit" class="btn btn-primary mr-2">Valider</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}